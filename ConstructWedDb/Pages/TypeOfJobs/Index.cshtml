@page
@model ConstructWedDb.Pages.TypeOfJobs.IndexModel

@{
    ViewData["Title"] = "Виды работ";
}

<h1>Виды работ</h1>

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfJob[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfJob[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfJob[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfJob[0].Material1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfJob[0].Material2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfJob[0].Material3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TypeOfJob) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material1.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material2.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material3.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
