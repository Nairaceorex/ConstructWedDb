@page
@model ConstructWedDb.Pages.FilReq.Filter.FiltertTypeofJobModel
@{
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Вид работы</th>
            <th scope="col">материалы</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TypeOfJob)
        {
            string str = "";
            <tr>
                <td>@Html.DisplayFor(modelitem => item.Name)</td>
                <td>
                    <ol>
                        @{
                            try
                            {
                                str = Model.Material.First(m => m.ID == item.Material1ID).Name;
                                <li>@str</li>
                            }
                            catch
                            {
                                <li>нет</li>
                            }
                            try
                            {
                                str = Model.Material.First(m => m.ID == item.Material2ID).Name;
                                <li>@str</li>
                            }
                            catch
                            {
                                <li>нет</li>
                            }
                            try
                            {
                                str = Model.Material.First(m => m.ID == item.Material3ID).Name;
                                <li>@str</li>
                            }
                            catch
                            {
                                <li>нет</li>
                            }
                        }
                    </ol>
                </td>
            </tr>
        }

    </tbody>
</table>